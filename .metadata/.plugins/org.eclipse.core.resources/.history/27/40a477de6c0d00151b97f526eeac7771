
public class sort {
	int []array;
	public int[] sortArray(int []array){
		//int []array = {5,8,2,1,3,0,1,7};
		this.array = array;
	    int min = 0;
	    int temp;
	
	    for(int i = 0; i < array.length; i++)
	    {
	        //min = i;
	        for(int j=i; j< array.length; j++)
	        {
	            if(array[j] < array[min])
	                min = j;
	
	        }
	         temp = array[i];
	         array[i] = array[min];
	         array[min] = temp;
	    }
	    return array;
	}
}
